{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true,
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"sourceMap": false,
		"jsx": "react",
		"strict": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"build",
		"src/**/*.stories.tsx",
		"src/**/*.test.tsx"
	]
}
